<div id="contact" v-cloak>
  <div class="container">
  <h1 class="text-center">CRUD LOCATION</h1>
    <div class="contact-form" v-if="!cloudSuccess">
      <hr/>
      <ajax-form action="deliverContactFormMessage" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()" :handle-parsing="handleParsingForm">
        <div class="form-group">
          <label for="name">Name</label>
          <input class="form-control" id="name" name="name" type="text"  :class="[formErrors.Nama ? 'is-invalid' : '']" v-model.trim="formData.Nama" placeholder="Cilacap" autofocus>
          <!-- <div class="invalid-feedback" v-if="formErrors.Nama">Please let us know what to call you.</div>-->
        </div>
        <div class="form-group">
          <label for="coordinates">Coordinates</label>
          <input class="form-control" id="koordinat" name="koordinat" type="text"  :class="[formErrors.Koordinat ? 'is-invalid' : '']" v-model.trim="formData.Koordinat" placeholder="-7.685728, 109.088935">
          <div class="invalid-feedback" v-if="formErrors.Koordinat">Please enter a valid koordinat.</div>
        </div>
        <div class="form-group">
          <ajax-button type="submit" :syncing="syncing" class="btn btn-dark btn-lg btn-block">Send message</ajax-button>
        </div>
      </ajax-form>
    </div>
    <div class="success-message" v-if="cloudSuccess">
      <p class="text-center">Thanks for reaching out!</p>
      <hr/>
      <p>We have received your message, and someone from our team will get back to you soon.</p>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
